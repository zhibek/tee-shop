<?xml version="1.0"?>

<layout>
    <catalog_product_view>
        <reference name="product.info.media.after">
            <block type="camelcase_engravable/engravable" name="engravable_name" template="engravable/name.phtml" />
        </reference>
    </catalog_product_view>
    
    <checkout_cart_index>
        <reference name="additional.product.info">
            <block type="camelcase_engravable/engravable" name="additional.product.engravable" template="engravable/basket.phtml" />
        </reference>
    </checkout_cart_index>
    
    <product_list>
        <reference name="product_list.name.after">
            <block type="camelcase_engravable/modal" name="product_modal" template="engravable/modal.phtml" />
        </reference>
    </product_list>
    
</layout>