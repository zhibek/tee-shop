<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <TeeShop_Catalog>
            <version>0.2.0.1</version>
        </TeeShop_Catalog>
    </modules>
    <global>
        <models>
            <teeshop_catalog>
                <class>TeeShop_Catalog_Model</class>
            </teeshop_catalog>
            <catalog>
                <rewrite>
                    <layer>TeeShop_Catalog_Model_Layer</layer>
                </rewrite>
            </catalog>
        </models>
        <helpers>
            <teeshop_catalog>
                <class>TeeShop_Catalog_Helper</class>
            </teeshop_catalog>
            <catalog>
                <rewrite>
                    <product>TeeShop_Catalog_Helper_Catalog_Product</product>
                </rewrite>
            </catalog>
        </helpers>
        <resources>
            <teeshop_setup>
                <setup>
                    <module>TeeShop_Catalog</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </teeshop_setup>
        </resources>
    </global>
    <frontend>
        <events>
            <controller_action_predispatch_catalog_product_view>
                <observers>
                    <teeshop_catalog>
                        <type>model</type>
                        <class>teeshop_catalog/observer</class>
                        <method>forwardToConfigurable</method>
                    </teeshop_catalog>
                </observers>
            </controller_action_predispatch_catalog_product_view>
        </events>
    </frontend>
</config>
