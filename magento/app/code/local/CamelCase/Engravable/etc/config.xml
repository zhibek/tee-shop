<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <CamelCase_Engravable>
            <version>1.0.6</version> 
        </CamelCase_Engravable>
    </modules>
    <default>
        <engravable>
            <default>
                <character_price>5</character_price>
            </default>
        </engravable>
    </default>
    <global>
        <fieldsets>
            <sales_convert_quote_item>
                <engraved_name>
                    <to_order_item>*</to_order_item>
                </engraved_name>
                <engraved_date>
                    <to_order_item>*</to_order_item>
                </engraved_date>
            </sales_convert_quote_item>
            <sales_convert_order_item>
                <engraved_name>
                    <to_quote_item>*</to_quote_item>
                </engraved_name>
                <engraved_date>
                    <to_quote_item>*</to_quote_item>
                </engraved_date>
            </sales_convert_order_item>
        </fieldsets>
        <blocks>
            <camelcase_engravable>
                <class>CamelCase_Engravable_Block</class>
            </camelcase_engravable>
        </blocks>
        <models>
            <camelcase_engravable>
                <class>CamelCase_Engravable_Model</class>
            </camelcase_engravable>
        </models>

        <resources>
            <engravable_setup>
                <setup>
                    <module>CamelCase_Engravable</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </engravable_setup>
        </resources>
        <events>
            <sales_quote_save_after>
                <observers>
                    <camelcase_engravable>
                        <type>model</type>
                        <class>camelcase_engravable/observer</class>
                        <method>logNameAndDate</method>
                    </camelcase_engravable>
                </observers>
            </sales_quote_save_after>
        </events>
       
    </global>
    
    <frontend>
        <layout>
            <updates>
                <camelcase_engravable>
                    <file>engravable.xml</file>
                </camelcase_engravable>
            </updates>
        </layout>  
    </frontend>  
    
    <adminhtml>
        <layout>
            <updates>
                <engravable>
                    <file>engravable_admin.xml</file>
                </engravable>
            </updates>
        </layout>  
    </adminhtml>  
</config>
