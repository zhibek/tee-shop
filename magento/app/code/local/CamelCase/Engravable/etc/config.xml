<config>
    <modules>
        <CamelCase_Engravable>
            <version>0.1.3</version>
        </CamelCase_Engravable>
    </modules>
    <global>
        <resources>
            <engravable_setup>
                <setup>
                    <module>CamelCase_Engravable</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </engravable_setup>
        </resources>    
        <blocks>
            <engravable>
                <class>CamelCase_Engravable_Block</class>
            </engravable>
        </blocks>
        <helpers>
            <engravable>
                <class>CamelCase_Engravable_Helper</class>
            </engravable>
        </helpers>
        <models>
            <engravable>
                <class>CamelCase_Engravable_Model</class>
            </engravable>
        </models>
        <events>
            <checkout_cart_product_add_after>
                <observers>
                    <engravable>
                        <class>engravable/observer</class>
                        <method>saveQuoteItem</method>
                    </engravable>
                    <separate_engravable_products>
                        <class>engravable/observer</class>
                        <method>makeQuoteItemForEachEngravableProduct</method>
                    </separate_engravable_products>
                </observers>
            </checkout_cart_product_add_after>
            <checkout_cart_add_product_complete>
                <observers>
                    <engravable>
                        <class>engravable/observer</class>
                        <method>addAttributesToQuoteItem</method>
                    </engravable>
                </observers>
            </checkout_cart_add_product_complete>
        </events>
        <fieldsets>
            <sales_convert_quote_item>
                <engravable_name>
                    <to_order_item>*</to_order_item>
                </engravable_name>
                <engravable_date>
                    <to_order_item>*</to_order_item>
                </engravable_date>
            </sales_convert_quote_item>
        </fieldsets>
    </global>
    <frontend>
        <layout>
            <updates>
                <engravable>
                    <file>engravable.xml</file>
                </engravable>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <engravable>
                    <file>engravable.xml</file>
                </engravable>
            </updates>
        </layout>
    </adminhtml>
</config>
