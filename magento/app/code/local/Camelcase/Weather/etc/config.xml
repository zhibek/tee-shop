<?xml version="1.0"?>
<config>
    <modules>
        <Camelcase_Weather>
            <version>0.1.0</version>    <!-- Version number of your module -->
        </Camelcase_Weather>
    </modules>
    <frontend>
        <layout>
            <updates>
                <Camelcase_Weather>
                    <file>weather.xml</file>
                </Camelcase_Weather>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <weather>
                <class>Camelcase_Weather_Block</class>
            </weather>
        </blocks>
        <helpers>
            <weather>
                <class>Camelcase_Weather_Helper</class>
            </weather>
        </helpers>
        <models>
            <weather>
                <class>Camelcase_Weather_Model</class>
            </weather>
        </models>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <weather_options>
                                            <title>Weater Admin</title>
                                        </weather_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>