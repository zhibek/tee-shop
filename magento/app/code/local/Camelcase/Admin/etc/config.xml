<?xml version="1.0"?>
<config>
    <modules>
        <Camelcase_Admin>
            <version>0.1.0</version>    <!-- Version number of your module -->
        </Camelcase_Admin>
    </modules>
    
    <!-- ... -->
    <admin>
        <routers>
            <WeatherAdmin>
                <use>admin</use>
                <args>
                    <module>Camelcase_Admin</module>
                    <frontName>weather</frontName>
                </args>
            </WeatherAdmin>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <weather_menu translate="title" module="admin">
                <!--top menu name-->
                <title>Weather</title>
                <!--999 to put weather at the end-->  
                <sort_order>9999</sort_order>
                <!--menu items-->
                <children>
                    <!--first element-->
                    <first_page module="admin">
                        <title>Set Country</title> 
                        <action>weather/index/index</action>
                    </first_page>
                </children>
            </weather_menu>
        </menu> 
    </adminhtml>
