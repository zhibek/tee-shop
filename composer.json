{
    "name": "zhibek/tee-shop",
    "description": "tee-shop",
    "type": "project",
    "authors": [
        {
            "name": "John Levermore",
            "email": "john.levermore@zhibek.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "packages.firegento.com"
        },
        {
            "type": "git",
            "url": "https://github.com/zhibek/magento-scriptable-config.git"
        },
        {
            "type": "git",
            "url": "https://github.com/camelcasetechsd/Behat.git"
        }
    ],
    "require": {
        "bragento/magento-composer-installer": "~1",
        "magento/core": "1.9.2.1",
		"zhibek/magento-scriptable-config": "dev-master",
		"behat/behat": "dev-jenkins-server as 2.5.5",
        "behat/mink": "1.4.*@stable",
        "behat/mink-extension": "*",
        "behat/mink-goutte-driver": "*",
        "symfony/filesystem":            "2.6.11",
        "symfony/browser-kit":           "2.6.11"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "magento-root-dir": "magento",
        "persistent-files": [
            "app/etc/install.xml",
            "app/code/local"
        ],
	"magento-deploystrategy": "symlink",
	"auto-append-gitignore": false
    }
}
